/* component/menu/menu.wxss */

.menus {
  width: 320rpx;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 100;
  background: #fff;
  -webkit-transform: translate3d(-17em, 0, 0);
  -moz-transform: translate3d(-17em, 0, 0);
  transform: translate3d(-17em, 0, 0);
  -webkit-box-shadow: 10rpx 0 10rpx rgba(0, 0, 0, 0.15);
  -moz-box-shadow: 10rpx 0 10rpx rgba(0, 0, 0, 0.15);
  box-shadow: 10rpx 0 10rpx rgba(0, 0, 0, 0.15);
  -webkit-transition: -webkit-transform 300ms ease;
  -moz-transition: -moz-transform 300ms ease;
  transition: transform 300ms ease;
}

.menus.menus-open {
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
}

.menus-list {
  z-index: 100;
  text-align: center;
  list-style: none;
  margin-top: 64rpx;
  padding: 32rpx;
}

.menus-list-item {
  font-size: 32rpx;
  padding: 16rpx 0;
  line-height: 85rpx;
  display: list-item;
}

.menus-mask {
  display: none;
  background-color: hsla(0, 0%, 100%, 0);
  top: 0;
  position: fixed;
  right: 0;
  z-index: 99;
  width: 100%;
  height: 100%;
}

.menus-mask.menus-open {
  display: block;
}
